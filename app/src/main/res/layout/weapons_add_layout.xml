<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="15dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:id="@+id/weapons_add_layout_fields">
            <!-- Manufacturer -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TargetFontSmall"
                android:text="@string/weapon_make_and_model"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/weapons_add_layout_manufacturer"
                tools:text="Sig-Sauer"/>

            <!-- Caliber -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TargetFontSmall"
                android:text="@string/weapon_caliber"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/weapons_add_layout_caliber"/>

            <!-- Type -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TargetFontSmall"
                android:text="@string/weapon_type"/>

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/weapons_add_layout_type"/>
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/weapons_add_layout_fields"
            android:id="@+id/weapons_add_layout_save"
            android:text="@string/save"/>
    </RelativeLayout>
</ScrollView>